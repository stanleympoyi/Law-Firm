<%- include('partials/head')%>
<body class="d-flex flex-column vh-100">
<main class="container mt-5">
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Res Judicata</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav me-auto mb-2 mb-lg-0">
              <a class="nav-link" aria-current="page" href="/">Home</a>
              <a class="nav-link" href="/clients">Clients</a>
              <a class="nav-link" href="/cases">Cases</a>
              <a class="nav-link" href="/courts">Courts</a>
              <a class="nav-link" href="/judges">Judges</a>
            </div>
            <form class="d-flex" method="POST" action="/cases" novalidate>
              <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search Cases</button>
            </form>
          </div>
        </div>
      </nav>
    <h1 class="text-center mt-4 mb-3"> Cases</h1>
    <table class="table table-hover mt-5 border p-4 bg-light shadow table-bordered table-striped table-primary">
        <thead>
            <tr class="table-danger">
                <th>Case Action Number</th>
                <th>Plaintiff Name</th>
                <th>Defendant Name</th>
                <th>Client ID</th>
                <th>Court ID</th>
                <th>Judge</th>
                <th>Civil</th>
                <th>Criminal</th>
                <th scope="col" class="text-end"> Action</th>
            </tr>
        </thead>
        <tbody>
            <%rows.forEach(data => {%>    
                <tr class="table-success">
                    <td><%= data.civil_action_number %></td>
                    <td><%= data.plaint_name %></td>
                    <td><%= data.defend_name %></td>
                    <td><%= data.clientID %></td>
                    <td><%= data.courtID %></td>
                    <td><%= data.judge %></td>
                    <td><%= data.civil %></td>
                    <td><%= data.criminal %></td>
                    <td class="text-end">
                        <a href="/editcase/<%= data.civil_action_number %>" type="button" class="btn btn-primary btn-small"><i class="bi bi-pencil"></i>Edit</a>
                        <a href="/cases/<%= data.civil_action_number %>" type="button" class="btn btn-danger btn-small"><i class="bi bi-person-x"></i>Delete</a>
                    </td>
                </tr>
            <%})%>    
            </tbody>
    </table>
    <div class="row">
        <div class="col-6 d-flex justify-content-end">
            <a href="/addcase" type="button" class="btn btn-primary align-self-center">+Add Case</a>
        </div>
    </div>


</main>
</body>
</html>