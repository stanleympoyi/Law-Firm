                    <div class="signup-form">
                        <form action="" class="mt-5 border p-4 bg-light shadow mb-3">
                            <h3 class="mb-4 text-secondary">Add Judge</h3>
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label for="Firstname">First Name</label>
                                    <input type="text" name="Firstname" class="form-control" placeholder="First Name" id="Firstname">
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="Lastname">Last Name</label>
                                    <input type="text" name="Lastname" class="form-control" placeholder="Last Name" id="Lastname">
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="CourtID">Court ID</label>
                                    <input type="text" name="CourtID" class="form-control" placeholder="Court ID" id="CourtID">
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="Email">Email</label>
                                    <input type="email" name="Email" class="form-control" placeholder="Email" id="Email">
                                </div>
                            </div>
                            <div class="mb-3 col-md-9">
                                <label for="clerk">Clerk</label>
                                <input type="text" name="clerk" class="form-control" placeholder="Enter Clerk Name" id="clerk">
                            </div>
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label for="Phonenum">Phone Number</label>
                                    <input type="text" name="Phonenum" class="form-control" placeholder="Phone number" id="Phonenum">
        
                                </div>
                            
