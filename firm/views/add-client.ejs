<%- include('partials/head')%>
<body class="d-flex flex-column 100vh">
    <main class="container mt-5">
        <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Res Judicata</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                  <a class="nav-link active" aria-current="page" href="/">Home</a>
                  <a class="nav-link" href="/clients">Clients</a>
                  <a class="nav-link" href="/cases">Cases</a>
                  <a class="nav-link" href="/courts">Courts</a>
                  <a class="nav-link" href="/judges">Judges</a>
                  
                </div>
              </div>
            </div>
          </nav>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/clients">Clients</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add clients</li>
            </ol>
        </nav>
<div class="container">
    <div class="row">
        <div class="col-md-4 off-md-3">
            <div class="signup-form">
                <form method="POST" action="/addclient" class="mt-5 border p-4 bg-light shadow mb-3">
                    <h3 class="mb-4 text-secondary">Add Client</h3>
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="client_name">Client Name</label>
                            <input type="text" name="client_name" class="form-control" placeholder="Client Name" id="client_name" required>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="contact_name">Contact Name</label>
                            <input type="text" name="contact_name" class="form-control" placeholder="Contact Name" id="contact_name" required>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="phone_number">Phone Number</label>
                            <input type="number" name="phone_number" class="form-control" placeholder="Phone Number" id="phone_number" required min="1">
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="email_address">Email</label>
                            <input type="email" name="email_address" class="form-control" placeholder="Email" id="email_address" required>
                        </div>
                    </div>
                    <div class="mb-3 col-md-9">
                        <label for="address">Address</label>
                        <input type="text" name="address" class="form-control" placeholder="address" id="address" required>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="city">City</label>
                            <input type="text" name="city" class="form-control" placeholder="city" id="city" required>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="state">State</label>
                            <input type="text" name="state" class="form-control" placeholder="State" id="state" required>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="zip_code">Zip Code</label>
                            <input type="number" name="zip_code" class="form-control" placeholder="Zip code" id="zip_code" required minlength="5" min="1">
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-primary float-end">Add Client</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>