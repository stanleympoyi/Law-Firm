<%- include('partials/head')%>
<body class="d-flex flex-column vh-100">
    <main class="container mt-5">
        <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Res Judicata</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav me-auto mb-2 mb-lg-0">
                  <a class="nav-link" aria-current="page" href="/">Home</a>
                  <a class="nav-link" href="/clients">Clients</a>
                  <a class="nav-link" href="/cases">Cases</a>
                  <a class="nav-link" href="/courts">Courts</a>
                  <a class="nav-link" href="/judges">Judges</a>
                </div>
                <form class="d-flex" method="POST" action="/judges" novalidate>
                  <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
                  <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
              </div>
            </div>
          </nav>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/judges">Judges</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Judge</li>
            </ol>
        </nav>
        <div class="container">
            <div class="row">
                <div class="col-md-4 off-md-3">
                    <div class="signup-form">
                        <%rows.forEach(data => {%>   
                            <form method="POST" action="/editjudge/<%= data.judgeID %>" class="mt-5 border p-4 bg-light shadow mb-3">
                                <h3 class="mb-4 text-secondary">Update Judge</h3>
                                <div class="row">
                                    <div class="mb-3 col-md-6">
                                        <label for="first_name">First Name</label>
                                        <input type="text" name="first_name" class="form-control" value="<%= data.first_name %>" placeholder="First Name" id="first_name">
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label for="last_name">Last Name</label>
                                        <input type="text" name="last_name" class="form-control" value="<%= data.last_name %>" placeholder="Last Name" id="last_name">
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label for="phone_number">Phone Number</label>
                                        <input type="number" name="phone_number" class="form-control" value="<%= data.phone_number %>" placeholder="Phone number" id="phone_number">
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label for="email_address">Email</label>
                                        <input type="email" name="email_address" class="form-control" value="<%= data.email_address %>" placeholder="Email" id="email_address">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="mb-3 col-md-6">
                                        <label for="clerk">Clerk</label>
                                        <input type="text" name="clerk" class="form-control" value="<%= data.clerk %>" placeholder="Enter Clerk Name" id="clerk">
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label for="courtID">Court ID</label>
                                        <input type="number" name="courtID" class="form-control" value="<%= data.courtID %>" placeholder="Enter Court ID" id="courtID">
                                    </div>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="courtroom_num">Room Number</label>
                                    <input type="text" name="courtroom_num" class="form-control" value="<%= data.courtroom_num %>" placeholder="Enter Court Room" id="courtroom_num">
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <button class="btn btn-primary float-end">Update Judge</button>
                                    </div>
                                </div>
                            </form>
                        <%})%> 
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>