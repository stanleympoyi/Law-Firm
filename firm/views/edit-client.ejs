<%- include('partials/head')%>
<body class="d-flex flex-column vh-100">
    <main class="container mt-5">
        <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Res Judicata</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav me-auto mb-2 mb-lg-0">
                  <a class="nav-link" aria-current="page" href="/">Home</a>
                  <a class="nav-link" href="/clients">Clients</a>
                  <a class="nav-link" href="/cases">Cases</a>
                  <a class="nav-link" href="/courts">Courts</a>
                  <a class="nav-link" href="/judges">Judges</a>
                </div>
                <form class="d-flex" method="POST" action="/clients" novalidate>
                  <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
                  <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
              </div>
            </div>
          </nav>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/clients">Clients</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Client</li>
            </ol>
        </nav>
        <div class="container">
            <div class="row">
                <div class="col-md-4 off-md-3">
                    <div class="signup-form">
                        <%rows.forEach(data => {%>     
                            <form method="POST" action="/editclient/<%= data.clientID %>" class="mt-5 border p-4 bg-light shadow mb-3" novalidate>
                                <h3 class="mb-4 text-secondary">Edit</h3> 
                                    <div class="row">
                                        <div class="mb-3 col-md-6">
                                            <label for="client_name">Client Name</label>
                                            <input type="text" name="client_name" class="form-control" value="<%=data.client_name%>" placeholder="Client Name" id="client_name">
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label for="court_name">Contact Name</label>
                                            <input type="text" name="contact_name" class="form-control" value="<%=data.contact_name%>" placeholder="Contact Name" id="contact_name">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="mb-3 col-md-6">
                                            <label for="phone_number">Phone Number</label>
                                            <input type="number" name="phone_number" class="form-control" value="<%=data.phone_number%>" placeholder="Phone Number" id="phone_number">
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label for="email_address">Email</label>
                                            <input type="email" name="email_address" class="form-control" value="<%=data.email_address%>" placeholder="Email" id="email_address">
                                        </div>
                                    </div>
                                    <div class="mb-3 col-md-9">
                                        <label for="address">Address</label>
                                        <input type="text" name="address" class="form-control" value="<%=data.address%>" placeholder="address" id="address">
                                    </div>
                                    <div class="row">
                                        <div class="mb-3 col-md-6">
                                            <label for="city">City</label>
                                            <input type="text" name="city" class="form-control" value="<%=data.city%>" placeholder="city" id="city">
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label for="ST">State</label>
                                            <input type="text" name="state" class="form-control" value="<%= data.state %>" placeholder="st" id="st">
                                        </div>
                                        <div class="mb-3 col-md-6">
                                            <label for="zip_code">Zip Code</label>
                                            <input type="number" name="zip_code" class="form-control" value="<%= data.zip_code%>" placeholder="zip code" id="zip_code">
                                        </div>
                                        <div class="col-md-12">
                                            <button class="btn btn-primary float-end" type="submit">Update Client</button>
                                        </div>
                                    </div>
                            </form>
                        <%})%> 
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>