<%- include('partials/head')%>
<body class="d-flex flex-column vh-100">
    <main class="container mt-5">
        <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Res Judicata</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                  <a class="nav-link active" aria-current="page" href="/">Home</a>
                  <a class="nav-link" href="/clients">Clients</a>
                  <a class="nav-link" href="/cases">Cases</a>
                  <a class="nav-link" href="/courts">Courts</a>
                  <a class="nav-link" href="/judges">Judges</a>
                  
                </div>
              </div>
            </div>
          </nav>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/courts">Courts</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add Court</li>
            </ol>
        </nav>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= this.alert %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>    
        <div class="container">
            <div class="row">
                <div class="col-md-4 off-md-3">
                    <div class="signup-form">
                        <form method="POST" action="/addcourt" class="mt-5 border p-4 bg-light shadow mb-3" validate>
                            <h3 class="mb-4 text-secondary">Add Court</h3>
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label for="courtID">Court ID</label>
                                    <input type="text" name="courtID" class="form-control" placeholder="CourtID" id="courtID">
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="court_name">Court Name</label>
                                    <input type="text" name="court_name" class="form-control" placeholder="Court Name" id="court_name" required minlength="3">
                                </div>
                                
                            </div>
                            <div class="mb-3 col-md-9">
                                <label for="address">Address</label>
                                <input type="text" name="address" class="form-control" placeholder="address" id="address" required min="1">
                            </div>
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label for="city">City</label>
                                    <input type="text" name="city" class="form-control" placeholder="city" id="city" required min="1">
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="state">State</label>
                                    <input type="text" name="state" class="form-control" placeholder="state" id="state" required>
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="zip_code">Zip Code</label>
                                    <input type="number" name="zip_code" class="form-control" placeholder="zip code" id="zip_code" required min="1">
                                </div>
                                <div class="col-md-12">
                                    <button class="btn btn-primary float-end" type="submit">Add Court</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>